<div class="categories-container">
  <section class="categories-top">
    <h1>Categories</h1>
  </section>
  <%= form_with(model: @group, :html => {:class => 'group-form'}, url: groups_path, method: :post) do |f|  %>
    <h2>Add a Category</h2>

    <% if @group.errors.any? %> 
      <%= render "shared/errors", model: @group %>
    <% end %>

    <div class="input-block">
      <%= f.text_field :name, placeholder: "Edibles", class: "form-input" %>
    </div>
    <div class="input-block">
      <%= f.text_field :icon, placeholder: "Icon", class: "form-input" %>
    </div>
    <div class="input-block">
      <%= f.submit class: "btn submit"%>
    </div>
  <% end %>
</div>
