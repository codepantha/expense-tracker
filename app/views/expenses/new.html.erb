<div class="categories-container">
  <section class="categories-top">
    <h1>Expenses</h1>
  </section>
  <%= form_with(model: @expense, :html => {:class => 'group-form'}, url: group_expenses_path, method: :post) do |f|  %>
    <h2>Add an Expense</h2>

    <% if @expense.errors.any? %> 
      <%= render "shared/errors", model: @expense %>
    <% end %>

    <div class="input-block">
      <%= f.text_field :name, placeholder: "Edibles", class: "form-input" %>
    </div>
    <div class="input-block">
      <%= f.text_field :amount, placeholder: "$30.50", class: "form-input" %>
    </div>
    <div class="input-block">
      <%= f.submit class: "btn submit"%>
    </div>
  <% end %>
</div>
