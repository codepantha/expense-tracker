<section class="card-top bg-white">
  <h2 class="secondary-color">Log in</h2>
</section>

<%= form_for(resource, as: resource_name, :html => {:class => 'group-form'}, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input", placeholder: "nina@gmail.com" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-input", placeholder: "password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex justify-start items-start light-ash mt2 ph3">
      <%= f.check_box :remember_me, class: "remember" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="input-block pb3">
    <%= f.submit "Log in", class: "btn submit f5 mt4 br2 shadow-5 grow" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
